<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
<div class="container">
<h1><%= @restaurant.name %></h1>


<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>
</div>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<div class="container">
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li>><%= review.rating %></li>
  <% end %>
</ul>
</div>
